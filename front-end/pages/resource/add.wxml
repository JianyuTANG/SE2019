            <mp-cells >
                <mp-cell show-error prop="idcard" title="标题" ext-class="">
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请输入标题"/>
                </mp-cell>
                <mp-cell show-error prop="idcard" title="联系人" ext-class="">
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请输入联系人"/>
                </mp-cell>
               <mp-cell show-error prop="idcard" title="电话" ext-class="">
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请输入联系电话"/>
                </mp-cell>
               <mp-cell show-error prop="idcard" title="邮箱" ext-class="">
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请输入联系邮箱"/>
               </mp-cell>
               <mp-cell show-error prop="idcard" title="限定人员" ext-class="">
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请规定活动限定人员"/>
                </mp-cell>
               <mp-cell show-error prop="idcard" title="截止日期" ext-class="">
                <van-datetime-picker
                v-model="{{date.currentDate}}"
                type="date"
                :min-date="{{date.minDate}}"
                />
                    <input bindinput="formInputChange" data-field="idcard" class="weui-input" placeholder="请输入截止日期"/>
                </mp-cell>
                <mp-cell>
                    <mp-uploader bindfail="uploadError" bindsuccess="uploadSuccess" select="{{selectFile}}" upload="{{uplaodFile}}" files="{{files}}" max-count="5" title="图片上传" tips="图片上传提示"></mp-uploader>
                </mp-cell>
                <mp-cell prop="idcard" title="输入详情" ext-class="">
                </mp-cell>
                <editor id="editor" class="ql-container" placeholder="请输入详情" bindstatuschange="onStatusChange" bindready="onEditorReady"></editor>

