/* pages/me/me.wxss */
/* @import '/miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss'; */
.container{
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.debug-bg{
    background-color: #eef1f9;
}

.debug-bg view{
    background-color:white;
}

.padding{
    padding: 20rpx;
}

.card{
    width: 600rpx;
    border-radius: 10rpx;
    margin-top: 30rpx;
}

.flex{
    display: flex;
    justify-content:flex-start;
    align-items: center;
    flex-direction: row;
}

.card:first-child{
    margin-top: 100rpx;
}

.avatar{
    height: 120rpx;
    width:  120rpx;
    border-radius: 50rpx;
}

.name-container{
    display: flex;
    flex-direction: column;
    padding: 0 0 0 20rpx;/*上右下左*/
}

.name{
    font-size: 54rpx;
}

.check{
    font-size: 30rpx;
    color: rgba(192, 97, 149, 0.726);
    text-align: center;

    border-radius: 10rpx;
    width: 100rpx;
    border-color: rgba(192, 97, 149, 0.726);
    border-width: 2rpx;
    border-style: solid;
}

.icon{
    width:50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.div-line{
    background: rgb(82, 82, 82) !important;
    width: 100%;
    height: 5rpx;
   }

.weui-cells__title{
  width: 600rpx;
  border-radius: 10rpx;
}

.weui-cell weui-cell_input{
  width: 600rpx;
  border-radius: 10rpx;
  margin: 20px;
}
button {
  margin: 20px;
  }