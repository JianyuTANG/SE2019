<view class="container debug-bg">
  <view class="card padding flex">
    <view class="avatar-box">
      <view wx:if="{{showLoading}}" class="load-wrapper">
        <view class = "weui-loadmore">
        <view class = "weui-loading"></view>
        </view>
      </view>
      <image class="avatar" bindtap="chooseImage" src="{{ avatar }}" />
    </view>
    <view class="name-container" >
      <text class="name">{{ name }}</text>
      <view class="check"><text>13期 学员</text></view>
      <view class="check"><text>17期 辅导员</text></view>
    </view>
  </view>

  <view class="card padding">
    <mp-cells>
    
    <!-- 姓名、期数【链接】、modify【电话、邮箱、行业、工作单位】 -->
    <mp-cell  bindtap="navToDetailPage" link="{{true}}" value="个人卡片" data-field="personal">

      <view slot="icon">
      <image class="icon" src= "/assets/activity.png"/>
      </view>
    </mp-cell>
    
    <!-- 包括我发布的、我收藏的 -->
    <mp-cell  link="{{true}}" value="相关资源">
      <view slot="icon">
      <image class="icon" src= "/assets/activity.png"/>
      </view>
    </mp-cell>

    <mp-cell  link="{{true}}" value="使用指南">
      <view slot="icon">
      <image class="icon" src= "/assets/activity.png"/>
      </view>
    </mp-cell>

    </mp-cells>
  </view>

