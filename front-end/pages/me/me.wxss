.padding{
    padding: 20rpx;
}

.card{
    width: 600rpx;
    border-radius: 10rpx;
    margin-top: 30rpx;
    background-color:white;
}

.flex{
    display: flex;
    justify-content:flex-start;
    align-items: center;
    flex-direction: row;
}

.card:first-child{
    margin-top: 100rpx;
}

.avatar-box{
    position: relative; /*必须定义postion才能使下面两个absolute的100%成立*/
    height: 120rpx;
    width: 120rpx;
    border-radius: 50%;
}

.load-wrapper{
    height: 100%;
    width: 100%;
    position: absolute;
    background-color: rgba(112, 112, 112, 0.8)!important;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 2;/*需要比avatar高一层*/
    border-radius: 50%;
}

.avatar{
    height: 100%;
    width: 100%;
    position: absolute;
    z-index: 1;
    border-radius: 50%;
}

.name-container{
    display: flex;
    flex-direction: column;
    padding: 0 0 0 20rpx;/*上右下左*/
}

.name{
    font-size: 54rpx;
}

.check{
    font-size: 30rpx;
    color: rgba(192, 97, 149, 0.726);
    text-align: center;

    border-radius: 10rpx;
    width: auto;
    border-color: rgba(192, 97, 149, 0.726);
    border-width: 2rpx;
    border-style: solid;
}

.icon{
    width:50rpx;
    height: 50rpx;
    margin-right: 30rpx;
}

.div-line{
    background: rgb(82, 82, 82) !important;
    width: 100%;
    height: 5rpx;
   }