.background{
    background-color: white !important;
    display: flex;
    flex-direction: row;
}

.image-container{
    width: 300rpx;
}

.image-container image{
    width: 100%;
    height: 100%;
}

.container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    /* background-color:red; */
    padding: 20rpx;
    margin: 0;
    border: 0;
    height: 100%;
    background-color: white !important;
    /* margin-left: 50rpx; */
    margin-right: 50rpx;
}

.container text{
    font-size: 20rpx;
}

.title-line{
    font-size: 30rpx !important;
    font-weight: bold;
    margin-left:55rpx;
    margin-bottom: 10rpx;
}

.info-line{
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    margin-top: 10rpx;
}

.info-line image{
    width: 50rpx;
    height: 50rpx;
}

.stress-line{
    font-size: 30rpx !important;
    font-weight: bold;
}