<view class='background'>
  <van-row >
    <!-- <view bindtap="readmore" >  -->
    <van-col span="9" bindtap="readmore">
      <image style="width: 200rpx; height: 200rpx;" src="{{coverImg}}" fit="cover" show-error= "true" show-loading= "true"> </image>
    </van-col>
    <!-- </view> -->
    
    <van-col span="15">
      <van-row span="10" bindtap="readmore">
          <view class="title-container">
            <text class="title-line"> {{title}} </text>
          </view>
      </van-row>

      <van-row span="7">
          <van-col span="12">
            <view class="info-line">
              <text>发起人:
              {{name}} </text>
            </view>
          </van-col>
          <van-col span="12">
            <view class="info-line">
              <text>联系方式:
              {{contact}} </text>
            </view>
          </van-col>
      </van-row>

      <van-row span="7">
        
        <van-col span="12">
          <view class="info-line">
            <text>截止时间:
            {{due}} </text>
          </view>
        </van-col>
        <van-col span="12">
          <view class="info-line">
            <text>是否收藏:{{interested}}
            </text>
              <van-icon wx:if="{{interested}}" name='like' size="2.5em" bind:click="switch_interest"/>
              <van-icon wx:else name='like-o' size="2.5em" bind:click="switch_interest"/>
            <van-icon wx:if="{{canChange}}" name='setting' size="2.5em" bind:tap="change"/>
            <van-icon wx:if="{{canChange}}" name="clear" size="2.5em" bind:tap="delete"/>
          </view>
        </van-col>
          <!-- <view class='image-container' bindtap="readmore">
            <image src="/assets/unlike.png" fit="fill" show-error= "true" show-loading= "true"> </image>
          </view> -->
      </van-row>

    </van-col>
  </van-row>
</view>